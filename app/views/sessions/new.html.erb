<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-group">
  <%= label_tag :email %> <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    Password: <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
    Don't have an account? <%= link_to 'Signup', '/signup' %>
  <div class="form-group">
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>